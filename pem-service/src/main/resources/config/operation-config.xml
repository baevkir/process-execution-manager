<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="basic-operation.SyncCompositeOperation"
          class="com.pem.operation.composite.SyncCompositeOperationImp"
          scope="prototype"/>

    <bean id="basic-operation.BinaryConditionOperation"
          class="com.pem.operation.condition.BinaryConditionOperationImpl"
          scope="prototype"/>

    <bean id="basic-operation.IntegerConditionOperation"
          class="com.pem.operation.condition.IntegerConditionOperationImpl"
          scope="prototype"/>

    <bean id="basic-operation.CounterLoopOperation"
          class="com.pem.operation.loop.counter.CounterLoopOperationImpl"
          scope="prototype"/>

    <bean id="basic-operation.DoWhileOperation"
          class="com.pem.operation.loop.condition.DoWhileOperationImpl"
          scope="prototype"/>

    <bean id="basic-operation.WhileOperation"
          class="com.pem.operation.loop.condition.WhileOperationImpl"
          scope="prototype"/>

    <bean id="operationProvider"
          class="com.pem.logic.bean.provider.operation.impl.OperationProviderImpl"/>

    <bean id="conditionCalculatorProvider"
          class="com.pem.logic.bean.provider.calculator.impl.ConditionCalculatorProviderImpl"/>

    <bean id="operationContext" class="com.pem.logic.bean.provider.context.DefaultContextFactory"/>

    <bean id="operationContextProvider" class="com.pem.logic.bean.provider.context.impl.OperationContextProviderImpl"/>
</beans>