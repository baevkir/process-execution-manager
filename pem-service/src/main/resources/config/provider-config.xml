<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:utils="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/util
       http://www.springframework.org/schema/util/spring-util.xsd">

    <bean id="pem.custom-operation.SyncCompositeOperation"
          class="com.pem.core.operation.composite.SyncCompositeOperationImp"
          scope="prototype"/>

    <bean id="pem.custom-operation.PredicateOperation"
          class="com.pem.core.operation.condition.predicate.PredicateOperationImpl"
          scope="prototype"/>

    <bean id="pem.custom-operation.TriggerOperation"
          class="com.pem.core.operation.condition.trigger.TriggerOperationImpl"
          scope="prototype"/>

    <bean id="pem.custom-operation.CounterLoopOperation"
          class="com.pem.core.operation.loop.counter.CounterLoopOperationImpl"
          scope="prototype"/>

    <bean id="pem.custom-operation.DoWhileOperation"
          class="com.pem.core.operation.loop.condition.DoWhileOperationImpl"
          scope="prototype"/>

    <bean id="pem.custom-operation.WhileOperation"
          class="com.pem.core.operation.loop.condition.WhileOperationImpl"
          scope="prototype"/>

    <utils:set id="pem.preloadedBeanClasses">
        <value>com.pem.core.operation.basic.Operation</value>
        <value>com.pem.core.predicate.Predicate</value>
        <value>com.pem.core.trigger.Trigger</value>
    </utils:set>

    <bean id="pem.beanProvider" class="com.pem.logic.bean.provider.impl.BeanObjectProviderImpl">
        <property name="preloadedClasses" ref="pem.preloadedBeanClasses"/>
    </bean>

    <bean id="pem.operationProvider"
          class="com.pem.logic.bean.provider.operation.impl.OperationProviderImpl"/>
</beans>