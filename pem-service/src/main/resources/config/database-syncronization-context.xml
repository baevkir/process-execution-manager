<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="pem.operationDatabaseSynchronizer"
          class="com.pem.logic.bean.synchronizer.OperationDatabaseSynchronizer">
        <property name="persistenceManager" ref="pem.persistenceManager"/>
        <property name="operationProvider" ref="pem.operationProvider"/>
    </bean>

    <bean id="pem.predicateDatabaseSynchronizer"
          class="com.pem.logic.bean.synchronizer.PredicateDatabaseSynchronizer">
        <property name="persistenceManager" ref="pem.persistenceManager"/>
        <property name="predicateProvider" ref="pem.predicateProvider"/>
    </bean>

    <bean id="pem.triggerDatabaseSynchronizer"
          class="com.pem.logic.bean.synchronizer.TriggerDatabaseSynchronizer">
        <property name="persistenceManager" ref="pem.persistenceManager"/>
        <property name="triggerProvider" ref="pem.triggerProvider"/>
    </bean>
</beans>