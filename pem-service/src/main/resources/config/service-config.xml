<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="pem.predicateService" class="com.pem.logic.service.predicate.impl.PredicateServiceImpl">
        <property name="persistenceManager" ref="pem.persistenceManager"/>
    </bean>

    <bean id="pem.triggerService" class="com.pem.logic.service.trigger.impl.TriggerServiceImpl">
        <property name="persistenceManager" ref="pem.persistenceManager"/>
    </bean>

    <bean id="pem.operationService" class="com.pem.logic.service.operation.impl.OperationServiceImpl">
        <property name="persistenceManager" ref="pem.persistenceManager"/>
    </bean>

    <bean id="pem.executionProcessService" class="com.pem.logic.service.process.impl.ExecutionProcessServiceImpl">
        <property name="converterFactory" ref="pem.service.ConverterFactory"/>
        <property name="persistenceManager" ref="pem.persistenceManager"/>
        <property name="operationExecutor" ref="pem.operationExecutor"/>
        <property name="operationContextService" ref="pem.operationContextService"/>
    </bean>

    <bean id="pem.operationContextService" class="com.pem.logic.service.context.impl.OperationContextServiceImpl">
        <property name="beanProvider" ref="pem.beanProvider"/>
    </bean>
 </beans>