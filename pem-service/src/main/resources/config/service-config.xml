<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="calculatorBeanEntityProvider" class="com.pem.service.calculator.impl.CalculatorBeanEntityProviderImpl">
        <property name="calculatorProvider" ref="conditionCalculatorProvider"/>
    </bean>

    <bean id="conditionCalculatorService" class="com.pem.service.calculator.impl.ConditionCalculatorServiceImpl">
        <property name="beanEntityProvider" ref="calculatorBeanEntityProvider"/>
        <property name="persistenceService" ref="calculatorPersistenceService"/>
    </bean>

 </beans>