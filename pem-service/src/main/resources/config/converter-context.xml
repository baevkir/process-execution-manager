<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="pem.service.ConverterFactory" class="com.pem.core.common.converter.factory.impl.TwoKeyConverterFactory"/>

    <bean id="pem.beanOperationConverter" class="com.pem.logic.converter.operation.basic.BeanOperationConverter">
        <property name="beanProvider" ref="pem.beanProvider"/>
    </bean>

    <bean id="pem.predicateConverter" class="com.pem.logic.converter.predicate.PredicateConverter">
        <property name="beanProvider" ref="pem.beanProvider"/>
    </bean>

    <bean id="pem.triggerConverter" class="com.pem.logic.converter.trigger.TriggerConverter">
        <property name="beanProvider" ref="pem.beanProvider"/>
    </bean>

    <bean id="pem.syncCompositeOperationConverter"
          class="com.pem.logic.converter.operation.composite.SyncCompositeOperationConverter">
        <property name="beanProvider" ref="pem.beanProvider"/>
        <property name="converterFactory" ref="pem.service.ConverterFactory"/>
    </bean>

    <bean id="pem.predicateOperationConverter"
          class="com.pem.logic.converter.operation.predicate.PredicateOperationConverter">
        <property name="beanProvider" ref="pem.beanProvider"/>
        <property name="converterFactory" ref="pem.service.ConverterFactory"/>
    </bean>

    <bean id="pem.triggerOperationConverter"
          class="com.pem.logic.converter.operation.condition.TriggerOperationConverter">
        <property name="beanProvider" ref="pem.beanProvider"/>
        <property name="converterFactory" ref="pem.service.ConverterFactory"/>
    </bean>

    <bean id="pem.counterLoopOperationConverter"
          class="com.pem.logic.converter.operation.loop.CounterLoopOperationConverter">
        <property name="beanProvider" ref="pem.beanProvider"/>
        <property name="converterFactory" ref="pem.service.ConverterFactory"/>
    </bean>

    <bean id="pem.doWhileOperationConverter" class="com.pem.logic.converter.operation.loop.DoWhileOperationConverter">
        <property name="beanProvider" ref="pem.beanProvider"/>
        <property name="converterFactory" ref="pem.service.ConverterFactory"/>
    </bean>

    <bean id="pem.whileOperationConverter" class="com.pem.logic.converter.operation.loop.WhileOperationConverter">
        <property name="beanProvider" ref="pem.beanProvider"/>
        <property name="converterFactory" ref="pem.service.ConverterFactory"/>
    </bean>

    <bean id="pem.fromOperationObjectToProcessConverter"
          class="com.pem.logic.converter.process.FromOperationObjectToProcessConverter"/>

    <bean id="pem.fromOperationToProcessConverter"
          class="com.pem.logic.converter.process.FromOperationToProcessConverter"/>

</beans>