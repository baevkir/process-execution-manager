<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="converterFactory" class="com.pem.persistence.converter.ConverterFactoryImpl"/>

    <bean id="beanOperationConverter" class="com.pem.persistence.converter.operation.basic.BeanOperationConverter">
        <property name="operationProvider" ref="operationProvider"/>
    </bean>

    <bean id="binaryCalculatorConverter" class="com.pem.persistence.converter.calculator.BinaryCalculatorConverter">
        <property name="calculatorProvider" ref="conditionCalculatorProvider"/>
    </bean>

    <bean id="integerCalculatorConverter" class="com.pem.persistence.converter.calculator.IntegerCalculatorConverter">
        <property name="calculatorProvider" ref="conditionCalculatorProvider"/>
    </bean>

    <bean id="syncCompositeOperationConverter"
          class="com.pem.persistence.converter.operation.composite.SyncCompositeOperationConverter">
        <property name="operationProvider" ref="operationProvider"/>
        <property name="converterFactory" ref="converterFactory"/>
    </bean>

    <bean id="binaryConditionOperationConverter"
          class="com.pem.persistence.converter.operation.condition.BinaryConditionOperationConverter">
        <property name="operationProvider" ref="operationProvider"/>
        <property name="converterFactory" ref="converterFactory"/>
    </bean>

    <bean id="integerConditionOperationConverter"
          class="com.pem.persistence.converter.operation.condition.IntegerConditionOperationConverter">
        <property name="operationProvider" ref="operationProvider"/>
        <property name="converterFactory" ref="converterFactory"/>
    </bean>

    <bean id="counterLoopOperationConverter"
          class="com.pem.persistence.converter.operation.loop.CounterLoopOperationConverter">
        <property name="operationProvider" ref="operationProvider"/>
        <property name="converterFactory" ref="converterFactory"/>
    </bean>

    <bean id="doWhileOperationConverter" class="com.pem.persistence.converter.operation.loop.DoWhileOperationConverter">
        <property name="operationProvider" ref="operationProvider"/>
        <property name="converterFactory" ref="converterFactory"/>
    </bean>

    <bean id="whileOperationConverter" class="com.pem.persistence.converter.operation.loop.WhileOperationConverter">
        <property name="operationProvider" ref="operationProvider"/>
        <property name="converterFactory" ref="converterFactory"/>
    </bean>

    <bean id="fromOperationEntityToProcessConverter"
          class="com.pem.persistence.converter.process.FromOperationEntityToProcessConverter"/>

    <bean id="fromOperationToProcessConverter"
          class="com.pem.persistence.converter.process.FromOperationToProcessConverter"/>

</beans>