<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mongo="http://www.springframework.org/schema/data/mongo"
       xsi:schemaLocation="http://www.springframework.org/schema/data/mongo
          http://www.springframework.org/schema/data/mongo/spring-mongo.xsd
          http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans.xsd">

    <mongo:db-factory
            host="127.0.0.1"
            port="27017"
            dbname="pem-db"
            username="mongouser"
            password="kv2QGZFzM2"/>

    <mongo:mapping-converter id="converter" base-package="com.pem.persistence.model"/>

    <mongo:auditing mapping-context-ref="mappingContext" set-dates="true" modify-on-creation="true"/>
    <bean id="mappingContext" factory-bean="converter" factory-method="getMappingContext"/>

    <mongo:repositories base-package="com.pem.persistence.repository"/>

    <bean id="mongoTemplate" class="org.springframework.data.mongodb.core.MongoTemplate">
        <constructor-arg name="mongoDbFactory" ref="mongoDbFactory"/>
        <constructor-arg name="mongoConverter" ref="converter"/>
    </bean>

    <bean id="operationPersistenceService"
          class="com.pem.persistence.service.operation.OperationPersistenceServiceImpl"/>

    <bean id="calculatorPersistenceService"
          class="com.pem.persistence.service.calculator.CalculatorPersistenceServiceImpl"/>

    <bean id="executionRecordPersistenceService"
          class="com.pem.persistence.service.process.ExecutionRecordPersistenceServiceImpl"/>

    <bean id="processPersistenceService" class="com.pem.persistence.service.process.ProcessPersistenceServiceImpl">
        <property name="executionRecordPersistenceService" ref="executionRecordPersistenceService"/>
    </bean>
</beans>